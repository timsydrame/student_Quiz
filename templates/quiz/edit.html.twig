{% extends "base.html.twig" %}
{% block title %}Modifier Quiz!
{% endblock %}

{% block body %}
	{# templates/quiz/edit.html.twig #}
	{{ form_start(form) }}
	{{ form_errors(form) }}

	{{ form_row(form.name) }}
	{{ form_row(form.description) }}

	<button type="submit">Enregistrer</button>

	{{ form_end(form) }}

<a href=" {{ path('app_question_new', {'quizId': quiz.id}) }} " class="btn btn-primary">Ajouter une question</a>


	<table class="table">
		<thead>
			<tr>
				<th>Question</th>				
				<th>Actions</th>				
			</tr>
		</thead>
		<tbody>
			{% for question in quiz.questions %} 
				<tr class="{{ cycle(['even', 'odd'], loop.index) }}">				
					<td>{{ question.enonce }}</td>
					<td>
						{# <a href="{{ path('app_question', {'questionId': question.id}) }} " class="btn btn-primary"> #}
						<a href="#" class="btn btn-danger">

							<i class="fas fa-play"></i>
							Lire
						</a>

						<a href="{{ path('app_question_edit', {'questionId': question.id, 'quizId': quiz.id}) }}" class="btn btn-warning">

							<i class="fas fa-edit"></i>
							Modifier
						</a>

<a href="{{ path('app_question_delete', {'questionId': question.id, 'quizId': quiz.id}) }}" class="btn btn-danger">


							<i class="fas fa-trash"></i>
							Supprimer
						</a>
					</td>
				<table/>
			 {% endfor %}

		</tbody>
	</table>

{% endblock %}

